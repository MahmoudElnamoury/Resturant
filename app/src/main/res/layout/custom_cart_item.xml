<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cart_item_shape"
    android:padding="@dimen/custom_cart_item_padding"
    android:layout_marginTop="@dimen/custom_cart_item_margin_top">

    <TextView
        android:id="@+id/custom_cart_item_num"
        android:layout_width="@dimen/custom_cart_item_num_tv_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_cart_item_num_tv_margin_start"
        android:gravity="center"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="@dimen/custom_cart_item_num_tv_text_size"/>

    <TextView
        android:id="@+id/custom_cart_item_name"
        android:layout_width="@dimen/custom_cart_item_name_tv_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/custom_cart_item_name_tv_margin_start"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/custom_cart_item_num"
        app:layout_constraintStart_toEndOf="@+id/custom_cart_item_num"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="@dimen/custom_cart_item_name_tv_text_size"/>

    <TextView
        android:id="@+id/custom_cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/custom_cart_item_price_tv_margin_end"
        android:text="$ 11.00"
        android:textSize="@dimen/custom_cart_item_price_tv_text_size"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/custom_cart_item_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/custom_cart_item_name"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>